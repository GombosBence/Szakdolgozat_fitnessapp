<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:id="@+id/genderRl">

        <TextView
           android:text="@string/gender"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
           android:id="@+id/genderTv"
           android:textSize="18sp"
            android:gravity="center"
           android:minHeight="55dp"/>

        <RadioButton
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:text="@string/male"
            android:textSize="16sp"
            android:id="@+id/maleRadio"
            android:layout_toRightOf="@id/genderTv"/>
        <RadioButton
            android:layout_toRightOf="@id/maleRadio"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:text="@string/female"
            android:textSize="16sp"
            android:id="@+id/femaleRadio"/>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/ageTv"
            android:layout_below="@id/genderTv"
            android:text="@string/age"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:textSize="18sp"
            android:gravity="center"
            android:minHeight="55dp"/>
        <EditText
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/ageTv"
            android:layout_below="@id/maleRadio"
            android:layout_width="250dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:inputType="number"
            android:minHeight="55dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/ageEt"/>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/weightTv"
            android:layout_below="@id/ageTv"
            android:text="@string/weight"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:textSize="18sp"
            android:gravity="center"
            android:minHeight="55dp"/>
        <EditText
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/weightTv"
            android:layout_below="@id/ageEt"
            android:layout_width="250dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:inputType="number"
            android:minHeight="55dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/weightEt"/>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/heightTv"
            android:layout_below="@id/weightTv"
            android:text="@string/height"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:textSize="18sp"
            android:gravity="center"
            android:minHeight="55dp"/>
        <EditText
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/heightTv"
            android:layout_below="@id/weightEt"
            android:layout_width="250dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:inputType="number"
            android:minHeight="55dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/heightEt"/>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/activityTv"
            android:layout_below="@id/heightTv"
            android:text="@string/ActivityLevel"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:textSize="18sp"
            android:gravity="center"
            android:minHeight="55dp"/>
        <Spinner
           android:layout_marginTop="25dp"
            android:layout_below="@id/heightEt"
            android:layout_toRightOf="@id/activityTv"
            android:id="@+id/acitivtySpinner"
            android:layout_width="250dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:minHeight="55dp"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:layout_marginTop="25dp"
            android:layout_below="@id/activityTv"
            android:id="@+id/goalTv"
            android:text="@string/goal"
            android:layout_width="100dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:textSize="18sp"
            android:gravity="center"/>
        <Spinner
            android:layout_marginTop="25dp"
            android:layout_below="@id/acitivtySpinner"
            android:layout_toRightOf="@id/goalTv"
            android:id="@+id/goalSpinner"
            android:layout_width="250dp"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:textSize="20sp"
            android:gravity="center"/>
                 
    </RelativeLayout>
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/save"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:background="#B7D2CE"
        android:textColor="#FFFFFF"/>
</LinearLayout>