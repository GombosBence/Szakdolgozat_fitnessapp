<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

          <ProgressBar
        android:progress="1000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:progressTint="#b7dadd"
        style="@style/CustomHorizontalProgressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="50px"
        android:id="@+id/calProgressBar"
        android:min="0"
        android:max="2000"/>
        

        <TextView
            android:layout_marginLeft="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/currentCalTv"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:text="0"
            android:gravity="center"/>
        <TextView
            android:id="@+id/slsh"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="/"/>
        <TextView
            android:layout_marginRight="85dp"
            android:layout_toRightOf="@id/slsh"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/maximumCalTv"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:text="2000"
            android:gravity="center"/>
       
      

    </RelativeLayout>

    




    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/protein"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:src="@drawable/carbohydrates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:src="@drawable/fat_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Protein"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Carbohydrate"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Fat"/>

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proValTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="0"/>
        <TextView
            android:id="@+id/carboValTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="0"/>
        <TextView
            android:id="@+id/fatsValTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/textviewborder"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/prevDayIv"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:id="@+id/dateTv"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/nextDayIv"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/next_icon"/>
    </LinearLayout>

    <ListView
        android:id="@+id/myMealsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>


</LinearLayout>
